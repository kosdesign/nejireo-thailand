<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Bss_QuoteExtension:etc/quote_extension_pdf_file.xsd">
    <renderers>
        <page type="kos_quote_extend">
            <renderer product_type="default">Kos\SalesPart\Model\Quote\Pdf\Items\DefaultQuote</renderer>
        </page>
    </renderers>
    <totals>
        <total name="subtotal">
            <font_size>8</font_size>
        </total>
        <total name="discount">
            <font_size>8</font_size>
        </total>
        <total name="weee">
            <font_size>8</font_size>
        </total>
        <total name="shipping">
            <font_size>8</font_size>
        </total>
        <total name="adjustment_positive">
            <font_size>8</font_size>
        </total>
        <total name="adjustment_negative">
            <font_size>8</font_size>
        </total>
        <total name="tax">
            <font_size>8</font_size>
        </total>
        <total name="grand_total">
            <font_size>9</font_size>
        </total>
    </totals>
</config>
