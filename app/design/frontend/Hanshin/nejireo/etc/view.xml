<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <media>
        <images module="Magento_Catalog">
            <image id="mini_cart_product_thumbnail" type="thumbnail">
                <width>125</width>
                <height>125</height>
            </image>
            <image id="category_page_grid" type="small_image">
                <width>270</width>
                <height>240</height>
            </image>
            <image id="product_page_image_medium" type="image">
                <width>470</width>
                <height>470</height>
            </image>
            <image id="product_page_image_small" type="thumbnail">
                <width>80</width>
                <height>80</height>
            </image>
            <image id="related_products_list" type="small_image">
                <width>270</width>
                <height>240</height>
            </image>
            <image id="recently_viewed_products_grid_content_widget" type="small_image">
                <width>270</width>
                <height>240</height>
            </image>
            <image id="cart_page_product_thumbnail" type="small_image">
                <width>205</width>
                <height>205</height>
            </image>
        </images>
    </media>
    <vars module="Magento_Catalog">
        <var name="gallery">
            <var name="thumbmargin">0</var>
        </var>
    </vars>
    <vars module="Magento_ConfigurableProduct">
        <var name="gallery_switch_strategy">replace</var>
    </vars>
</view>