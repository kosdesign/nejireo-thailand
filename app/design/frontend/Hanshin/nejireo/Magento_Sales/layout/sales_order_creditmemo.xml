<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Home</item>
                    <item name="label" xsi:type="string" translate="true">Home</item>
                    <item name="link" xsi:type="string">/home</item>
                </argument>
            </action> 
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">order</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Order History</item>
                    <item name="label" xsi:type="string" translate="true">Order History</item>
                    <item name="link" xsi:type="string">/sales/order/history</item>
                </argument>
            </action> 
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">order-refund</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Order Refunds</item>
                    <item name="label" xsi:type="string" translate="true">Order Refunds</item>
                </argument>
            </action> 
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Sales\Block\Order\Creditmemo" name="sales.order.info.button.back" template="Magento_Sales::order/info/buttonback.phtml" after="sales.order.info"/>
        </referenceContainer>
    </body>
</page>
