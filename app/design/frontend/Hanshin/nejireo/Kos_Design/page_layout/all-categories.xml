<?xml version="1.0"?>
<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="1column"/>
    <referenceContainer name="columns" htmlTag="div" htmlClass="columns categories-list-all" />
    <referenceContainer name="row.section.top">
        <block class="Kos\CatalogExtend\Block\Category\Tree" name="kos.catalog.topnav.all" template="Kos_CatalogExtend::category/tree_all_catagory.phtml" before="-"/>
        <block class="Kos\Design\Block\Category\Navigation" name="kos.catalog.topnav.show" template="Kos_Design::category/categories_show.phtml" after="kos.catalog.topnav.all"/>
    </referenceContainer>

    <referenceContainer name="main.content">
        <block class="Magento\Framework\View\Element\Template" name="hs.top.search" as="topSearch" template="Magento_Search::form.mini.phtml" before="page.wrapper.hs" />
    </referenceContainer>

    <referenceContainer name="page.bottom.content">
        <block class="Magento\Catalog\Block\Widget\RecentlyViewed"
                name="recently_viewed_categories"
                template="Magento_Catalog::product/widget/viewed/grid.phtml" after="-">
            <arguments>
                <argument name="uiComponent" xsi:type="string">widget_recently_viewed</argument>
                <argument name="page_size" xsi:type="number">8</argument>
                <argument name="show_attributes" xsi:type="string">name,image,learn_more</argument>
                <argument name="show_buttons" xsi:type="string">add_to_wishlist</argument>
            </arguments>
        </block>
    </referenceContainer>
    
    <referenceContainer name="page.bottom.container">
        <block class="Magento\Cms\Block\Block" name="card-seo-banner" after="-">
            <arguments>
                <argument name="block_id" xsi:type="string">card-seo-banner-catalog-product-view</argument>
            </arguments>
        </block>
    </referenceContainer>

    <move element="breadcrumbs" destination="row.section.top" before="-"/>

    <referenceContainer name="breadcrumbs" remove="true"/>
    <referenceContainer name="page.main.title" remove="true"/>

</layout>