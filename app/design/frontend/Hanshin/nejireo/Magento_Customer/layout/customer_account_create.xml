<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Customer Register</title>
    </head>
    <body>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Home</item>
                    <item name="label" xsi:type="string" translate="true">Home</item>
                    <item name="link" xsi:type="string">/home</item>
                </argument>
            </action> 
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">account-register</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Register</item>
                    <item name="label" xsi:type="string" translate="true">Register</item>
                </argument>
            </action> 
        </referenceBlock>

        <referenceContainer name="main.content" htmlClass="hs-main"/>
        <referenceContainer name="columns" htmlClass="page-account-login-register mt-4"/>
        
        <referenceContainer name="content">
            <container name="content.background.white" htmlTag="div" htmlClass="background-white">
                <container name="content.page.content" htmlTag="div" htmlClass="page-content">
                    <!-- customer.form.login.extra -->
                    <container name="customer.login.container" label="Customer Login Container" htmlTag="div" htmlClass="container">
                        <block class="Magento\Customer\Block\Form\Register" name="customer_form_register" template="Magento_Customer::form/register.phtml">
                            <arguments>
                                <argument name="attribute_data" xsi:type="object">Magento\Customer\Block\DataProviders\AddressAttributeData</argument>
                            </arguments>
                            <container name="form.additional.info" as="form_additional_info"/>
                            <container name="customer.form.register.fields.before" as="form_fields_before" label="Form Fields Before" htmlTag="div" htmlClass="customer-form-before"/>
                        </block>
                    </container>
                    <block class="Magento\Cookie\Block\RequireCookie" name="require-cookie" template="Magento_Cookie::require_cookie.phtml">
                        <arguments>
                            <argument name="triggers" xsi:type="array">
                                <item name="registerSubmitButton" xsi:type="string">.action.submit</item>
                            </argument>
                        </arguments>
                    </block>
                </container>
            </container>
        </referenceContainer>
        
        <referenceContainer name="form.additional.info">
            <block class="Magento\Framework\View\Element\Template" name="form_additional_info_customer" template="Magento_Customer::additionalinfocustomer.phtml"/>
        </referenceContainer>
        <referenceBlock name="customer.new" remove="true" />
        <referenceBlock name="page.main.title" remove="true" />
        <move element="breadcrumbs" destination="columns.top" before="-"/>
    </body>
</page>
