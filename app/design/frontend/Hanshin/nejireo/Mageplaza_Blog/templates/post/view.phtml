        $(".share-list .share").on("click", function () {
            var currentUrl = window.location.href;

            var tempInput = $("<input>");
            $("body").append(tempInput);
            tempInput.val(currentUrl).select();

            if (document.execCommand("copy")) {
                $(".copy-text-noti").css('max-height','30px');
                var unsetMaxHeight = setInterval(function(){
                        $(".copy-text-noti").css('max-height','0');
                        clearInterval(unsetMaxHeight);
                    },3000);

            } else {
                console.error("Copy to clipboard failed.");
            }

            tempInput.remove();
        });
    });
